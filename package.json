{
	"name": "remix-template-vercel",
	"private": true,
	"description": "",
	"license": "",
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"dev": "remix vite:dev",
		"build": "remix vite:build",
		"start": "remix-serve ./build/server/index.js",
		"lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
		"hook": "bun lint && bun format:check",
		"cypress:open": "./node_modules/.bin/cypress open",
		"cypress:run:flow": "./node_modules/.bin/cypress run --spec cypress/integration/e2e/$FLOW/_index.spec.ts",
		"cypress:run": "./node_modules/.bin/cypress run",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"format:check": "bun prettier --check app --cache --cache-strategy metadata",
		"format:write": "bun prettier --write app --cache --cache-strategy metadata",
		"prepare": "husky install"
	},
	"dependencies": {
		"@remix-run/node": "2.8.1",
		"@remix-run/react": "2.8.1",
		"@remix-run/server-runtime": "^2.8.1",
		"@vercel/remix": "2.8.1",
		"isbot": "^5.1.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@remix-run/dev": "2.8.1",
		"@remix-run/eslint-config": "2.8.1",
		"@remix-run/serve": "2.8.1",
		"@testing-library/cypress": "^10.0.1",
		"@testing-library/dom": "^9.0.1",
		"@testing-library/jest-dom": "^5.16.4",
		"@testing-library/react": "^14.0.0",
		"@types/node": "20.5.1",
		"@types/react": "^18.0.24",
		"@types/react-dom": "^18.2.7",
		"@typescript-eslint/eslint-plugin": "^5.59.7",
		"@typescript-eslint/parser": "^5.59.7",
		"@vitejs/plugin-react": "^4.2.0",
		"@vitest/coverage-v8": "1.3.1",
		"c8": "^7.11.3",
		"cypress": "^13.6.4",
		"eslint": "^8.47.0",
		"eslint-config-prettier": "^9.1.0",
		"happy-dom": "^9.18.3",
		"husky": "^8.0.0",
		"jest": "^29.0.1",
		"postcss": "^8.4.35",
		"prettier": "^3.2.4",
		"prettier-plugin-tailwindcss": "^0.5.11",
		"tailwindcss": "^3.3.2",
		"typescript": "^5.1.0",
		"vite": "^5.1.0",
		"vite-tsconfig-paths": "^4.2.0",
		"vitest": "^1.3.1"
	},
	"eslintIgnore": [
		"/node_modules",
		"/build",
		"/public/build",
		"/api",
		"/coverage",
		".eslintrc.js",
		"tailwind.config.js",
		"server.js",
		"remix.config.js"
	]
}
