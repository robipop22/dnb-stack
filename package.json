{
	"name": "remix-template-vercel",
	"private": true,
	"description": "",
	"license": "",
	"sideEffects": false,
	"scripts": {
		"build": "run-s build:*",
		"build:css": "npm run generate:css -- --minify",
		"build:remix": "remix build",
		"dev": "run-p dev:*",
		"dev:css": "npm run generate:css -- --watch",
		"dev:remix": "remix dev",
		"generate:css": "npx tailwindcss -o ./app/tailwind.css",
		"start": "remix-serve build",
		"lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
		"hook": "pnpm lint && pnpm format:check",
		"cypress:open": "./node_modules/.bin/cypress open",
		"cypress:run:flow": "./node_modules/.bin/cypress run --spec cypress/integration/e2e/$FLOW/_index.spec.ts",
		"cypress:run": "./node_modules/.bin/cypress run",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"format:write": "prettier --write .",
		"format:check": "prettier --check .",
		"prepare": "husky install"
	},
	"dependencies": {
		"@remix-run/node": "^1.8.2",
		"@remix-run/react": "^1.8.2",
		"@remix-run/vercel": "^1.8.2",
		"@vercel/node": "^2.5.10",
		"isbot": "^3.6.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.8.2",
		"@remix-run/eslint-config": "^1.8.2",
		"@remix-run/serve": "^1.8.2",
		"@testing-library/cypress": "^9.0.0",
		"@testing-library/dom": "^8.13.0",
		"@testing-library/jest-dom": "^5.16.4",
		"@testing-library/react": "^13.2.0",
		"@types/react": "^18.0.24",
		"@types/react-dom": "^18.0.8",
		"@vitejs/plugin-react": "^3.0.0",
		"@vitest/coverage-c8": "^0.26.3",
		"c8": "^7.11.3",
		"cypress": "^12.0.2",
		"eslint": "^8.11.0",
		"eslint-config-prettier": "^8.5.0",
		"happy-dom": "^8.1.0",
		"husky": "^8.0.0",
		"jest": "^29.0.1",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.0.9",
		"prettier": "^2.7.1",
		"tailwindcss": "^3.1.6",
		"typescript": "^4.5.5",
		"vite": "^4.0.2",
		"vite-tsconfig-paths": "^4.0.2",
		"vitest": "^0.25.2"
	},
	"engines": {
		"node": ">=14"
	},
	"eslintIgnore": [
		"/node_modules",
		"/build",
		"/public/build",
		"/api",
		"/coverage",
		".eslintrc.js",
		"tailwind.config.js",
		"server.js",
		"remix.config.js"
	]
}
